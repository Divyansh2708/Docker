pipeline {
    agent any

    environment {
        IMAGE_NAME = "myapp:latest"
        CONTAINER_NAME = "myapp_container"
    }

    stages {

        stage('Checkout') {
            steps {
                // Checkout the main branch from your GitHub repo
                git branch: 'main',
                    url: 'https://github.com/Divyansh2708/Docker.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                // Build Docker image from project1 folder
                sh "docker build -t ${IMAGE_NAME} ./project1"
            }
        }

        stage('Run Docker Container') {
            steps {
                // Stop and remove previous container if exists
                sh """
                    docker rm -f ${CONTAINER_NAME} || true
                    docker run -d --name ${CONTAINER_NAME} -p 8081:8080 ${IMAGE_NAME}
                """
            }
        }
    }

    post {
        failure {
            echo "Pipeline failed!"
        }
        success {
            echo "Pipeline completed successfully!"
        }
    }
}
