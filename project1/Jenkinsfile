pipeline {
    agent any

    stages {
        stage('Clone') {
            steps {
                 git branch: 'main', url: 'https://github.com/Divyansh2708/Docker.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t myapp:latest ./project1'
            }
        }

        stage('Run Docker Container') {
            steps {
                sh 'docker run --rm myapp:latest ./project1'
            }
        }
    }
}


